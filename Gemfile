source 'https://rubygems.org'
ruby '2.0.0'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

# DB stuff
gem 'activesupport'
gem 'activerecord'
gem 'bcrypt-ruby'

# Run requirements
gem 'rake'
gem 'shotgun'

# For use with API
gem 'json'
gem 'httparty'
gem 'dotenv'
gem 'nokogiri'

# Music stuff
gem "discogs-wrapper"

# Test gems (although I haven't tested)
group :test do
  gem 'shoulda-matchers'
  gem 'rack-test'
  gem 'rspec'
  gem 'capybara'
  gem 'jasmine'
end

group :test, :development do
  gem 'factory_girl'
  gem 'faker'
end
